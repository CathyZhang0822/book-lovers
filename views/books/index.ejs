<% include ../partials/header %>
<h1 align="center"> All Books</h1>

<!--rendered data-->
<div align="center" class="container">
    <form method="POST" action='/books/new'>
        <input type="text" class="form" name = "title" placeholder="Enter Title">
        <input type="text" class="form" name = "author" placeholder="Enter Author">
        <button>Add A New Book</button>
    </form> 
</div>


<!--rendered data-->
<div class="container">
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Title</th>
                <th scope="col">Author</th>
                <th scope="col">Actions</th>
            </tr>
        </head>
        <tbody>
            <% for(var i = 0; i < books.length; i++){ %>
                <tr>
                  <th scope="row"><%= i+1 %></th>
                  <td><%= books[i].title %></td>
                  <td><%= books[i].author %></td>
                  <td>
                      <a href="/books/<%= books[i].id %>/edit" class="btn btn-primary btn-sm " role="button" >Edit</a>
                  </td>
                </tr>
            <% } %>
        </tbody>
    </table>
</div>